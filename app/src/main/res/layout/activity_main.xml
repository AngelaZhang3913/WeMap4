<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/barbiemap"
        android:layout_width="348dp"
        android:layout_height="354dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.408"
        app:srcCompat="@drawable/barbie_map" />

    <ImageButton
        android:id="@+id/padButton"
        android:layout_width="187dp"
        android:layout_height="51dp"
        android:background="@drawable/padbutton"
        android:contextClickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/bathroomButton"
        android:layout_width="185dp"
        android:layout_height="46dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bathroombutton"
        android:contextClickable="true"
        app:layout_constraintBottom_toTopOf="@+id/padButton"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/healthButton"
        android:layout_width="183dp"
        android:layout_height="44dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/healthbutton"
        android:contextClickable="true"
        app:layout_constraintBottom_toTopOf="@+id/bathroomButton"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wemaplogo" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="35dp"
        android:text="Search"
        app:layout_constraintBottom_toTopOf="@+id/barbiemap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#FF00C8" />

    <EditText
        android:id="@+id/BuildingSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/barbiemap"
        app:layout_constraintEnd_toStartOf="@+id/submitButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>